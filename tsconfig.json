{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "api/*": ["./app/api/*"],
      "components/*": ["./app/components/*"],
      "redux/*": ["./app/redux/*"],
      "lib/*": ["./app/lib/*"],
      "pages/*": ["./app/pages/*"]
    },
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    "__tests__/*.tsx" 
  ],
  "exclude": [
    "node_modules"
  ],
}
